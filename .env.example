# API Keys
FMP_API_KEY=your_fmp_api_key_here
DEEPSEEK_API_KEY=your_deepseek_api_key_here
SEC_API_KEY=your_sec_api_key_here_optional

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=fmna
POSTGRES_USER=fmna_user
POSTGRES_PASSWORD=your_postgres_password

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# MongoDB Configuration (optional for document storage)
MONGO_URI=mongodb://localhost:27017/fmna

# Cognee Configuration (open-source - no API key needed!)
# Installed via pip, see: https://github.com/topoteretes/cognee
COGNEE_ENABLED=True

# Application Settings
ENVIRONMENT=development
LOG_LEVEL=INFO
DEBUG=True

# Data Storage Paths
DATA_DIR=data
RAW_DATA_DIR=data/raw
PROCESSED_DATA_DIR=data/processed
MODELS_DIR=data/models
OUTPUTS_DIR=outputs

# LLM Configuration
LLM_PROVIDER=deepseek
LLM_MODEL=deepseek-chat
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=4000

# Financial Data Settings
DEFAULT_PERIOD=ttm  # Data period: 'annual', 'quarter', or 'ttm' (trailing twelve months)
                    # ttm = Most current data (recommended)
                    # quarter = Latest quarterly filings only
                    # annual = Annual reports only (can be 3-11 months stale)

# Rate Limiting
FMP_RATE_LIMIT=300  # requests per minute
SEC_RATE_LIMIT=10   # requests per second

# Prefect/Orchestration
PREFECT_API_URL=http://localhost:4200/api

# Security
SECRET_KEY=your_secret_key_for_encryption
JWT_SECRET=your_jwt_secret_for_authentication

# Frontend (for future use)
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8000
